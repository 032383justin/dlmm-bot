{
  "name": "dlmm-bot",
  "version": "1.0.0",
  "description": "DLMM Rotation Bot",
  "main": "dist/start.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/start.js",
    "dev:UNSAFE": "echo '⚠️ WARNING: ts-node causes singleton issues. Use npm run start instead.' && ts-node src/start.ts",
    "monitor": "ts-node src/utils/monitor.ts",
    "report": "ts-node src/utils/report.ts",
    "dashboard": "ts-node src/dashboard/server.ts",
    "production": "npm run build && node dist/start.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:amort": "jest amortization_decay"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@meteora-ag/dlmm": "^1.8.0",
    "@solana/web3.js": "^1.87.6",
    "@supabase/supabase-js": "^2.39.0",
    "axios": "^1.6.2",
    "bignumber.js": "^9.1.2",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "pm2": "^5.3.0",
    "stream-json": "^1.9.1",
    "winston": "^3.11.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.25",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/stream-json": "^1.7.8",
    "@types/ws": "^8.5.10",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.ts"],
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "transform": {
      "^.+\\.tsx?$": ["ts-jest", {
        "tsconfig": "tsconfig.json"
      }]
    }
  }
}
